# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 4

# PowerShell files
[*.ps1]
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4

# TOML files
[*.toml]
indent_style = space
indent_size = 4

# YAML files
[*.yml]
indent_style = space
indent_size = 2
